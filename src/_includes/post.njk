---
layout: main_layout.njk
image: null
---
<style>
    .post {
        margin: 20px 0 80px;
        display: flex;
        flex-direction: column;
    }

    .post img, .post pre {
        width: 110%;
        align-self: center;
    }

    .post svg.icon {
        height: 16pt;
        fill: var(--text-color);
    }

    .post pre {
        font-size: 14px;
        max-height: 80vh;
        overflow-x: hidden;
    }

    pre code {
        white-space: break-spaces !important;
        overflow-x: hidden;
    }

    .post .qoute {
        font-style: italic;
    }

    .post .qoute::before {
        content: "\"";
    }

    .post .qoute::after {
        content: "\"";
    }

    .post > *:is(h1, h2, h3, h4, h5) {
        font-size: 140%;
    }

    .post .date {
        font-size: 12pt;
        font-family: monospace;
    }

    .center {
        text-align: center;
        font-weight: inherit;
        padding: 10px 30px;
    }

    .post > p, .post li {
        font-size: 14pt;
        line-height: 1.4em;
        margin: 12px 0;
    }

    .post li {
        margin: 10px 0;
    }

    .post .note {
        font-style: italic;
    }

    .post mark {
        display: inline-block;
        width: 100%;
        background-color: black;
        border-left: 4px solid var(--accent);
        margin-left: -4px;
        color: white;
    }
    
    @media screen and (max-width: 480px) {
        .center {
            text-align: center;
            font-weight: inherit;
            padding: 10px 0px;
        }

        .post > p, .post li {
            font-size: 12pt;
            line-height: 1.4em;
        }

        .post img, .post pre {
            width: 100%;
        }

        .post pre {
            font-size: 10px;
        }
    }
</style>

<div class="post">
    <h1>{{title}}</h1>
    {% if date %}
        <p class="date">Published on {{date | formatDateLong | safe}}</p>
    {% endif %}
    {% if image %}
        <img src="{{image}}" alt="">
    {% endif %}
    {{ content | safe }}
</div>
