                text-align: right;
            }

            footer nav ul {
                margin: 0;
                padding-left: 0;
                list-style: none;
                font-size: 10pt;
            }

            footer nav svg {
                height: 10pt;
                margin-right: 4px;
                fill: var(--muted-accent);
                position: relative;
                top: 2px;
            }

            @media screen and (max-width: 480px) {
                header > div {
                    flex-direction: column;
                }

                body {
                    width: 100vw;
                }
            }
        </style>
