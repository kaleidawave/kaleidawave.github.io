        <title>{{ title }}</title>
        <meta name="title" content="{{title}}">
        <meta property="og:title" content="{{title}}">
        <meta property="twitter:title" content="{{title}}">

        <meta name="description" content="{{description}}">
        <meta property="og:description" content="{{description}}">
        <meta property="twitter:description" content="{{description}}">

        <meta property="og:type" content="website">
        <meta property="og:url" content="https://kaleidawave.github.io/">
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://kaleidawave.github.io/">

        {% if image === null %} 
            <meta property="twitter:image" content="https://kaleidawave.github.io/media/banner.jpg">
            <meta property="og:image" content="https://kaleidawave.github.io/media/banner.jpg">
        {% elif image.startsWith("/") %}
            <meta property="twitter:image" content="https://kaleidawave.github.io{{image}}">
            <meta property="og:image" content="https://kaleidawave.github.io{{image}}">
        {% else %}
            <meta property="twitter:image" content="{{image}}">
            <meta property="og:image" content="{{image}}">
        {% endif %}

        <script>
            if (localStorage.getItem("theme") === null) {
                onSchemeChange();
            }

            function onSchemeChange(darkTheme = null) {
                if (darkTheme === null) {
                    if ("matchMedia" in window) {
                        darkTheme = window.matchMedia("(prefers-color-scheme: dark)").matches;
                    } else {
                        darkTheme = false;
                    }
                }
                localStorage.setItem("theme", darkTheme ? "dark" : "light");
            }

            function updateThemeClass(value = null) {
                if (value === null) {
                    value = localStorage.getItem("theme") === "dark";
                }
                if (value) {
                    document.documentElement.classList.add("dark");
                } else {
                    document.documentElement.classList.remove("dark");
                }
            }

            updateThemeClass();
            
            window.addEventListener("hashchange", () => {
                window.scrollBy(0, -100);
            }, false);

            if (location.hash) {
                window.onload = () => { window.scrollBy(0, -100); }
            }
        </script>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500&display=swap" rel="stylesheet">
        <style>
            :root {
                font-family: "SF Pro Display", "SF Pro Icons", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
                font-weight: 500;
                --text-color: #1a1a1a;
                --background: #f2f6f7;
                --muted-background: white;
                --muted-background-opaque: rgba(255, 255, 255, 0.7);
                --accent: #3b1afa;
                --muted-accent: #4d31e9;
                letter-spacing: .02rem;
            }

            :root.dark {
                font-weight: 300;
                --text-color: #dbdbdb;
                --background: #151516;
                --muted-background: #1f1f23;
                --muted-background-opaque: rgba(31, 31, 35, 0.7);
                --accent: #aff7c2;
                --muted-accent: #c7f9d4;
            }

            :root:not(.dark) strong {
                font-weight: bold;
            }

            body {
                margin: 0;
                padding: 0;
                background-color: var(--background, white);
                color: var(--text-color, black);
                display:flex; 
                flex-direction:column;
                min-height: 100vh;
            }

            header {
                background-color: var(--muted-background-opaque, white);
                display: flex;
                justify-content: space-around;
                align-items: center;
                font-size: 16px;
                padding: 14px;
                position: -webkit-sticky;
                position: sticky;
                top: 0;
                right: 0;
                left: 0;
                z-index: 100;
            }
    
            strong {
                font-weight: 400;
            }

            em {
                position: relative;
                left: -2px;
            }

            header > div {
                width: 100% !important;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            ul {
                margin: 0px;
                padding-left: 20px;
            }

            main {
                margin: 20px 0 80px;
            }

            .width-box {
                max-width: min(80vw, 720px);
                width: 100%;
                margin: 0 auto;
            }

            svg.icon {
                height: 10pt;
                margin-right: 4px;
                fill: var(--muted-accent);
                position: relative;
                top: 3px;
            }

            header h1 {
                font-family: Fira Code light, consolas, sans-serif;
                font-weight: 100;
                font-size: inherit;
            }

            header h1 > a {
                color: var(--text-color) !important;
            }

            header .title {
                display: flex;
            }

            header img {
                margin-top: 2px;
                height: 30px;
                margin-left: 6px;
            }

            header nav > ul {
                padding-left: 0;
                display: flex;
                list-style: none;
            }

            header nav > ul > li {
                margin-left: 10px;
                text-transform: lowercase;
            }

            a {
                color: var(--accent, white);
                text-decoration: none;
            }

            a:visited {
                color: var(--muted-accent, white);
            }

            code, pre {
                background-color: var(--muted-background);
                border-radius: 4px;
                font-size: 80%;
                font-family: Fira Code light, consolas, monospace !important;
                overflow-x: scroll;
            }

            footer {
                margin-top: auto; 
                background-color: var(--muted-background, white);
                padding: 22px;
            }

            footer > div {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
                align-items: center;
                justify-content: space-evenly;
            }

            footer h3 {
                margin: 0;
                font-weight: inherit;
                font-size: 16px;
                font-family: Fira Code light, consolas, sans-serif;
            }

            footer nav {
                grid-row: 1/3;
                grid-column: 2;
                text-align: right;
            }

            footer nav ul {
                margin: 0;
                padding-left: 0;
                list-style: none;
                font-size: 10pt;
            }

            @media screen and (max-width: 480px) {
                header > div {
                    flex-direction: column;
                }

                body {
                    width: 100vw;
                }
            }

            @supports (display: grid) {
                header {
                    -webkit-backdrop-filter: blur(20px);
                    backdrop-filter: blur(20px);
                }
            }
        </style>
        <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">
    </head>
    <body>
        <header>
            <div class="width-box">
                <div class="title">
                    <h1>
                        <a href="/">kaleidawave.github.io</a>
                    </h1>
                    <img src="/media/icon.png" alt="">
                </div>
                <nav>
                    <ul>
                        <li><a href="/posts">Posts</a></li>
                        <li><a href="/about">About</a></li>
                    </ul>
                </nav>
            </div>
        </header>
        <main>
            <div class="width-box">
                {{ content | safe }}
            </div>
        </main>
        <footer>
            <div class="width-box">
                <h3> 2021 @kaleidawave </h3>
                <nav>
                    <ul>
                        <li><a href="https://github.com/kaleidawave">{% icon "github" %} GitHub</a></li>
                        <li><a href="https://twitter.com/kaleidawave">{% icon "twitter" %} Twitter</a></li>
                        <li><a href="https://leetcode.com/kaleidawave/">{% icon "leetcode" %} LeetCode</a></li>
                    </ul>
                </nav>
                <form>
                    <label for="toggle-theme">Light Mode</label>
                    <input type="checkbox" name="toggle-theme" id="toggle-theme">
                </form>
                <span>Built with <a href="https://www.11ty.dev/">{% icon "eleventy" %} Eleventy</a></span>
                <script>
                    const themeSwitch = document.querySelector("#toggle-theme");
                    themeSwitch.checked = localStorage.getItem("theme") !== "dark";

                    themeSwitch.addEventListener("change", (ev) => {
                        const darkTheme = !ev.target.checked;
                        onSchemeChange(darkTheme);
                        updateThemeClass(darkTheme);
                    })
                </script>
            </div>
        </footer>
    </body>
</html>
