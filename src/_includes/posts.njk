<style>
    .posts ul {
        list-style: none;
        padding-left: 0;
    }

    .posts h3 {
        font-size: 32px;
        font-weight: lighter;
        text-align: center;
    }

    .posts > ul {
        display: grid;
        grid-auto-rows: min-content;
        gap: 14px;
    }

    .posts > ul > li {
        background-color: var(--muted-background);
        padding: 12px;
        border-radius: 6px;
        display: grid;
    }

    .posts > ul > li > .post-image {
        height: 200px;
        overflow: hidden;
        border-radius: 6px;
        margin-bottom: 20px;
    }

    .posts > ul > li img {
        width: 100%;
        height: auto;
    }

    .posts > ul > li h5 {
        font-weight: lighter;
        font-size: 28px;
        margin: 0;
    }

    .posts .date {
        font-size: 12px;
        letter-spacing: .5px;
    }
</style>

<div class="posts">
    <h3>All Posts:</h3>
    <ul>
    {%- for post in collections.sortedPosts -%}
        <li>
            {% if post.data.image and post.data.includeImage %}
                <div class="post-image">
                    {% image post.data.image, "" %}
                </div>
            {% endif %}
            <a href="{{ post.url }}">
                <h5>{{ post.data.title }}</h5>
            </a>
            <p>{{post.data.description}}</p>
            {% if post.data.date %}
            <span class="date">
                {{ post.data.date | formatDateShort }}
            </span>
            {% endif %}
        </li>
    {%- endfor -%}
    </ul>
</div>
